<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">
    <TextView
        android:id="@+id/tvSkip2"
        android:layout_width="30.99dp"
        android:layout_height="20.05dp"
        android:layout_marginLeft="337dp"
        android:layout_marginTop="73dp"
        android:text="Skip"
        android:textColor="#007AFF"
        android:textSize="14.58sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="55dp"
        android:layout_height="20.05dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="71dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvBack1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="#007AFF"
            android:textSize="14.58sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img2"
        android:layout_width="223dp"
        android:layout_height="304dp"
        android:layout_marginTop="157dp"
        android:src="@drawable/pic2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="446dp"
        android:background="#AEAEC0"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="286.16dp"
                android:layout_height="90dp"
                android:layout_marginLeft="51.95dp"
                android:layout_marginTop="60dp"
                android:lineHeight="44.75dp"
                android:text="Organize your thougts"
                android:textAlignment="center"
                android:textColor="#1C2121"
                android:textSize="32.81sp" />

            <TextView
                android:layout_width="331.73dp"
                android:layout_height="62.88dp"
                android:layout_marginLeft="29.16dp"
                android:layout_marginTop="5.74dp"
                android:lineHeight="20.95dp"
                android:text="Most beautiful note taking application."
                android:textAlignment="center"
                android:textColor="#1C2121"
                android:textSize="14.96dp"
                tools:ignore="TextSizeCheck" />
            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="14dp"
                app:cardBackgroundColor="#007AFF">

                <TextView
                    android:id="@+id/tvNext2"
                    android:textColor="#FFFFFF"
                    android:layout_width="38dp"
                    android:layout_height="37dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="150dp"
                    android:text="Next"
                    android:textSize="17dp"
                    android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>